# Application
ENV=development
DEBUG=true
APP_NAME=GlobeTrotter API
API_VERSION=v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/globetrotter

# JWT Secrets (CHANGE IN PRODUCTION)
JWT_SECRET_KEY=your_super_secret_key_change_this_in_production_min_32_chars
JWT_REFRESH_SECRET_KEY=your_refresh_secret_key_change_this_in_production_min_32_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
